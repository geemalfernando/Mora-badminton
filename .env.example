# MongoDB (recommended)
# Use a dedicated DB for UMiSF, not your other apps.
DATABASE_URL=mongodb+srv://<user>:<password>@<cluster>/UMISF?retryWrites=true&w=majority
DB_NAME=UMISF

# Backwards-compatible with older config (only used if DATABASE_URL is not set)
CONNECTION_STRING=
DATABASE=

# API prefix for the frontend (CRA uses REACT_APP_API_URL=http://localhost:3001/api)
API_PREFIX=/api

# Optional: restrict CORS (comma-separated). Leave empty to allow all.
CORS_ORIGIN=http://localhost:3000

# Optional: Cloudinary (if not set, images are stored as data URLs in MongoDB)
CLOUD_NAME=
CLOUD_KEY=
CLOUD_SECRET=

PORT=3001

